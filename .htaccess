DirectoryIndex index.html index.php

RewriteEngine On

# -------------------------------------------------
# 1. Eliminar "/" final en archivos .html
# -------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+\.html)/$ /$1 [R=301,L]

# -------------------------------------------------
# 2. Redirecciones antiguas (SIN #)
# -------------------------------------------------

RewriteRule ^planes/?$ https://proredperu.com/?section=planes [R=301,L]
RewriteRule ^contactos/?$ https://proredperu.com/?section=contacto [R=301,L]

RewriteRule ^nosotros/?$ https://proredperu.com/public/nosotros.html [R=301,L]
RewriteRule ^cobertura/?$ https://proredperu.com/public/cobertura.html [R=301,L]
RewriteRule ^formas-de-pago/?$ https://proredperu.com/public/login.html/?section=formas-de-pago [R=301,L]

RewriteRule ^login/?$ https://proredperu.com/public/login.html [R=301,L]
RewriteRule ^clientes/?$ https://proredperu.com/public/login.html [R=301,L]

